import java.net.*;
import java.io.*;

class TCPclient {
    public static void main(String args[]) throws Exception {

        Socket clientSocket = new Socket("127.0.0.1", 4000);
        System.out.println("Connection successful");

        System.out.println("Enter the file name:");
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        String fname = br.readLine();

        PrintWriter pwrite = new PrintWriter(clientSocket.getOutputStream(), true);
        pwrite.println(fname);

        BufferedReader socketRead = new BufferedReader(new InputStreamReader(clientSocket.getInputStream()));

        String str;
        while ((str = socketRead.readLine()) != null) {
            System.out.println(str);
        }

        clientSocket.close();
    }
}
                                                                                                                                                                                                                                
